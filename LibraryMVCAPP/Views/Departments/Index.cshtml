@model IEnumerable<LibraryMVCAPP.Models.Department>

@{
    ViewBag.Title = "Index";
}

@Html.ActionLink("New Designation", "Create", null, new { @class = "btn btn-success" })
<hr />


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Designation List</h6>
    </div>
    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartmantName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.User.Username)
                    </th>
                    <th></th>
                </tr>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DepartmantName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.Username)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentID },new { @class = "btn btn-primary" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.DepartmentID },new { @class = "btn btn-info" }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>